<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="threads.trem.MenuInicialController">
   <children>
      <AnchorPane prefHeight="300.0" prefWidth="300.0">
         <children>
            <TabPane fx:id="tabPane" prefHeight="300.0" prefWidth="300.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                <Tab fx:id="tabSelecao" text="Modo de Jogo">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <Label layoutX="70.0" layoutY="14.0" prefHeight="45.0" prefWidth="165.0" text="Trem de Carga" textAlignment="CENTER">
                                 <font>
                                    <Font name="Gabriola" size="36.0" />
                                 </font>
                              </Label>
                              <Label layoutX="25.0" layoutY="72.0" text="Selecione o modo de Jogo">
                                 <font>
                                    <Font name="Georgia" size="14.0" />
                                 </font>
                              </Label>
                              <RadioButton fx:id="modoCriativo" layoutX="25.0" layoutY="104.0" mnemonicParsing="false" onAction="#selecionarCriativo" text="Criativo">
                                 <font>
                                    <Font name="Georgia" size="12.0" />
                                 </font>
                              </RadioButton>
                              <RadioButton fx:id="modoDesafio" layoutX="25.0" layoutY="131.0" mnemonicParsing="false" onAction="#selecionarDesafio" text="Desafio">
                                 <font>
                                    <Font name="Georgia" size="12.0" />
                                 </font>
                              </RadioButton>
                              <Label fx:id="descricaoModoJogo" layoutX="25.0" layoutY="165.0" maxWidth="250.0" textFill="#4d4d4d" textOverrun="CLIP" />
                              <Button fx:id="botaoIniciar" layoutX="166.0" layoutY="227.0" mnemonicParsing="false" onAction="#iniciarJogo" prefHeight="30.0" prefWidth="120.0" text="Iniciar">
                                 <font>
                                    <Font name="Georgia" size="14.0" />
                                 </font>
                              </Button>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
                <Tab fx:id="tabCriacao" text="Configuração Inicial">
                  <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="300.0">
                           <children>
                              <Label layoutX="43.0" layoutY="14.0" text="Configurar Estação">
                                 <font>
                                    <Font name="Gabriola" size="36.0" />
                                 </font>
                              </Label>
                              <Label layoutX="25.0" layoutY="67.0" text="Quantidade de Empacotadores">
                                 <font>
                                    <Font name="Georgia" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="qtdEmpacotadores" layoutX="225.0" layoutY="63.0" prefHeight="25.0" prefWidth="50.0" />
                              <Label layoutX="25.0" layoutY="98.0" text="Tempo de Empacotamento">
                                 <font>
                                    <Font name="Georgia" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tempoEmpacotamento" layoutX="225.0" layoutY="94.0" prefHeight="25.0" prefWidth="50.0" />
                              <Label layoutX="25.0" layoutY="129.0" text="Tempo de Viagem do Trem">
                                 <font>
                                    <Font name="Georgia" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="tempoViagem" layoutX="225.0" layoutY="125.0" prefHeight="25.0" prefWidth="50.0" />
                              <Label layoutX="25.0" layoutY="160.0" text="Carga Máxima do Depósito">
                                 <font>
                                    <Font name="Georgia" size="12.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="cargaDeposito" layoutX="225.0" layoutY="156.0" prefHeight="25.0" prefWidth="50.0" />
                              <Button layoutX="165.0" layoutY="227.0" mnemonicParsing="false" onAction="#iniciarJogo" prefHeight="30.0" prefWidth="120.0" text="Começar Dia">
                                 <font>
                                    <Font name="Georgia" size="14.0" />
                                 </font>
                              </Button>
                              <Button layoutX="25.0" layoutY="227.0" mnemonicParsing="false" onAction="#voltarModoJogo" prefHeight="30.0" prefWidth="120.0" text="&lt;- Voltar">
                                 <font>
                                    <Font name="Georgia" size="14.0" />
                                 </font>
                              </Button>
                           </children>
                        </AnchorPane>
                  </content>
                </Tab>
              </tabs>
            </TabPane>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
